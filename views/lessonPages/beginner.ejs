        <button class="btn border hover-effect lesson-resopse" onclick="submitQuiz()">Submit Quiz</button>

        <script>
            function submitQuiz() {
                alert("Quiz Submitted! Great job!");
            }


             function submitQuiz() {
                    // Correct answers
                    const correctAnswers = {
                        question1: 'B',
                        question2: 'A',
                        question3: 'A',
                        question4: 'A',
                        question5: 'A'
                    };

                    let score = 0;

                    // Loop through each question and check the selected answer
                    for (let question in correctAnswers) {
                        const selectedAnswer = document.querySelector(`input[name="${question}"]:checked`);
                        if (selectedAnswer && selectedAnswer.value === correctAnswers[question]) {
                            score++;
                        }
                    }

                    // Display the score
                    alert(`Your score is: ${score}/5`);

                }
        </script>
